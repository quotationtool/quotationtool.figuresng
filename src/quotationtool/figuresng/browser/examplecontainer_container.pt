<div i18n:domain="quotationtool">

  <h1 i18n:translate="examplecontainer-container-label">Examples in the Database</h1>

  <metal:block define-macro="example-list">
  <div class="container-listing">
    <table>
      <thead class="head">
	<tr>
	  <td>
	    <span
		tal:content="modules/quotationtool/figuresng/iexample/IExample/quid/title"
		>Example</span>
	  </td>
	  <td>
	    <span
		tal:content="modules/quotationtool/figuresng/iexample/IExample/pro_quo/title"
		>Denotation/Meaning</span>
	  </td>
	  <td>
	    <span
		tal:content="modules/quotationtool/figuresng/iexample/IExample/marker/title"
		>Marker</span>
	  </td>
	  <td>
	    <span
		tal:content="modules/quotationtool/bibliography/interfaces/IBibliographyCatalog/year/title"
		>Year</span>
	  </td>
	  <td>
	    <span
		tal:content="modules/quotationtool/bibliography/interfaces/IBibliographyCatalog/author/title"
		>Author</span>
	  </td>
	  <td>
	    <span
		tal:content="modules/quotationtool/bibliography/interfaces/IBibliographyCatalog/title/title"
		>Title</span>
	  </td>
	  <td>
	    <span i18n:translate="">flags</span>
	  </td>
	</tr>
      </thead>
      <tbody>
	<tal:block repeat="example view/getExamples">
	  <tr tal:condition="repeat/example/odd" class="odd">
	    <metal:macro define-macro="example-row">
	    <td>
	      <a href="" class="content"
		  tal:attributes="href example/@@absolute_url"
		  tal:content="example/quid"
		  >Tulpe</a>
	    </td>
	    <td tal:content="example/pro_quo">Blume, eine gewisse Zweckmaessingkeit ....</td>
	    <td tal:content="example/marker">z.B.</td>
	    <td tal:content="structure example/reference/@@year"
		>1793</td>
	    <td tal:content="structure example/reference/@@author"
		>Immanuel Kant</td>
	    <td tal:content="structure example/reference/@@title"
		>Kritik der Urteilskraft</td>
	    <td tal:content="structure example/@@flags"
		><span class="error schemaerror">S</span></td>
	    </metal:macro>
	  </tr>
	  <tr tal:condition="repeat/example/even" class="even">
	    <metal:macro use-macro="macro:example-row"/>
	  </tr>
	</tal:block>
      </tbody>
    </table>
  </div>
  </metal:block>

</div>
